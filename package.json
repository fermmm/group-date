{
   "name": "poly-dates-server",
   "version": "0.1.0",
   "description": "Poly Dates Server",
   "main": "build/index.js",
   "author": "Fernando Medina",
   "license": "ISC",
   "private": true,
   "scripts": {
      "prebuild": "npm run clean",
      "clean": "rimraf ./build",
      "build": "tsc-transpile-only",
      "database-init": "./vendor/gremlin-local-server/bin/gremlin-server.sh start || echo ",
      "database-stop": "./vendor/gremlin-local-server/bin/gremlin-server.sh stop",
      "database-restart": "./vendor/gremlin-local-server/bin/gremlin-server.sh restart",
      "dev-persistent": "npm run database-restart; nodemon --watch",
      "dev": "npm run database-restart && RESTORE_DATABASE_ON_INIT=false PERFORM_DATABASE_BACKUPS=false nodemon --watch",
      "start": "NODE_ENV=production pm2 start build/index.js --name poly && npm run database-init",
      "database-only": "pm2 start build/database-only.js --name poly-database && npm run database-init",
      "no-database-prod": "NODE_ENV=production NO_DATABASE=true pm2 start build/index.js --name poly",
      "backup": "node build/force-backup.js",
      "stop": "npm run backup && pm2 stop poly",
      "test:run-jest": "npm run build && jest --verbose --runInBand --forceExit",
      "test": "npm run database-restart; npm run test:run-jest",
      "test:prod": "NODE_ENV=production NO_DATABASE=true npm run test:run-jest",
      "prettier": "prettier --write \"src/**/*.ts\"",
      "prettier-differences": "prettier --list-different \"src/**/*.ts\"",
      "rimraf": "./node_modules/rimraf/bin.js",
      "aws-start": "NODE_ENV=production NO_DATABASE=true node build/index.js",
      "deploy": "npm run build && eb deploy"
   },
   "dependencies": {
      "@koa/cors": "^3.1.0",
      "@koa/router": "^8.0.8",
      "app-root-path": "^3.0.0",
      "aws-sdk": "^2.1012.0",
      "axios": "^0.21.1",
      "babel-jest": "^24.9.0",
      "chance": "^1.1.4",
      "dotenv": "^8.2.0",
      "expo-server-sdk": "^3.6.0",
      "fastest-validator": "^1.0.2",
      "gremlin": "^3.4.7",
      "i18n": "^0.13.2",
      "koa": "^2.11.0",
      "koa-body": "^4.1.1",
      "koa-mount": "^4.0.0",
      "koa-ratelimit": "^4.2.1",
      "koa-static": "^5.0.0",
      "moment": "^2.24.0",
      "nanoid": "^3.1.12",
      "node-schedule": "^2.0.0",
      "query-string": "^7.0.1",
      "rimraf": "^2.6.2",
      "semver": "^5.7.1",
      "set-interval-async": "1.0.32",
      "sharp": "^0.25.2",
      "thenby": "^1.3.4",
      "typescript-collections": "^1.3.3",
      "winston": "^3.3.3",
      "xml2js": "^0.4.23"
   },
   "devDependencies": {
      "@types/app-root-path": "^1.2.4",
      "@types/chance": "^1.0.9",
      "@types/formidable": "^1.0.31",
      "@types/gremlin": "^3.4.3",
      "@types/i18n": "^0.13.0",
      "@types/jest": "^27.0.2",
      "@types/koa": "^2.11.1",
      "@types/koa__cors": "^3.0.2",
      "@types/koa__router": "^8.0.2",
      "@types/koa-mount": "^4.0.0",
      "@types/koa-ratelimit": "^4.2.0",
      "@types/koa-static": "^4.0.1",
      "@types/node-schedule": "^1.3.1",
      "@types/semver": "^7.3.6",
      "@types/set-interval-async": "^1.0.0",
      "@types/sharp": "^0.24.0",
      "@types/uuid": "^7.0.2",
      "@types/xml2js": "^0.4.9",
      "husky": "^1.1.0",
      "jest": "^27.2.1",
      "jest-date-mock": "^1.0.8",
      "jest-extended": "^0.11.5",
      "nodemon": "^2.0.2",
      "prettier": "^2.1.1",
      "rimraf": "^2.6.2",
      "ts-essentials": "^6.0.2",
      "ts-jest": "^27.0.5",
      "ts-node": "^9.0.0",
      "tslint-config-prettier": "^1.15.0",
      "typescript": "^4.2.4",
      "typescript-transpile-only": "0.0.4"
   },
   "jest": {
      "preset": "ts-jest",
      "testEnvironment": "node",
      "testMatch": [
         "**/tests/**/*.test.js"
      ],
      "testTimeout": 600000,
      "globalSetup": "./build/tests/tools/beforeAllTests.js",
      "setupFiles": [
         "jest-date-mock",
         "./build/tests/tools/beforeEachTest.js"
      ],
      "setupFilesAfterEnv": [
         "jest-extended"
      ],
      "snapshotResolver": "./build/tests/tools/snapshotsResolver.js"
   },
   "husky": {
      "hooks": {
         "pre-commit": "npm run prettier-differences"
      }
   }
}
