{
   "name": "poly-dates-server",
   "version": "0.1.0",
   "description": "Poly Dates Server",
   "main": "build/index.js",
   "author": "Fernando Medina",
   "license": "ISC",
   "private": true,
   "scripts": {
      "clean": "rimraf ./build",
      "prebuild": "npm run clean",
      "build": "tsc",
      "start": "node --inspect=localhost:5858 --nolazy -r ts-node/register src/index.ts",
      "dev": "gremlin-server.sh restart && nodemon --watch",
      "dev-win": "gremlin-server.bat restart && nodemon --watch",
      "test": "gremlin-server.sh restart && jest --verbose --runInBand",
      "test:coverage": "gremlin-server.sh restart && jest --coverage",
      "test:watch": "gremlin-server.sh restart && jest --watch --runInBand",
      "prettier": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
      "style": "prettier --list-different \"src/**/*.ts\" \"test/**/*.ts\"",
      "lint": "tslint \"src/**/*.ts\"",
      "install-visualizer": "git submodule init && git submodule update && cd gremlin-visualizer && npm install",
      "visualizer": "cd gremlin-visualizer && npm start"
   },
   "devDependencies": {
      "@types/app-root-path": "^1.2.4",
      "@types/chance": "^1.0.9",
      "@types/formidable": "^1.0.31",
      "@types/gremlin": "^3.4.3",
      "@types/jest": "^23.3.2",
      "@types/koa": "^2.11.1",
      "@types/koa-mount": "^4.0.0",
      "@types/koa-ratelimit": "^4.2.0",
      "@types/koa-static": "^4.0.1",
      "@types/koa__router": "^8.0.2",
      "@types/sharp": "^0.24.0",
      "@types/uuid": "^7.0.2",
      "husky": "^1.1.0",
      "jest": "^24.9.0",
      "nodemon": "^2.0.2",
      "prettier": "^1.19.1",
      "rimraf": "^2.6.2",
      "ts-essentials": "^6.0.2",
      "ts-jest": "^23.10.3",
      "ts-node": "^7.0.1",
      "tslint": "^5.11.0",
      "tslint-config-prettier": "^1.15.0",
      "typescript": "^3.7.5"
   },
   "dependencies": {
      "@koa/router": "^8.0.8",
      "app-root-path": "^3.0.0",
      "axios": "^0.19.2",
      "babel-jest": "^24.9.0",
      "chance": "^1.1.4",
      "dotenv": "^8.2.0",
      "fastest-validator": "^1.0.2",
      "gremlin": "^3.4.4",
      "koa": "^2.11.0",
      "koa-body": "^4.1.1",
      "koa-mount": "^4.0.0",
      "koa-ratelimit": "^4.2.1",
      "koa-static": "^5.0.0",
      "moment": "^2.24.0",
      "ora": "^4.0.3",
      "sharp": "^0.25.2",
      "uuid": "^7.0.2"
   },
   "jest": {
      "preset": "ts-jest",
      "testEnvironment": "node",
      "testMatch": [
         "**/test/**/*.test.ts"
      ],
      "testTimeout": 60000,
      "globalSetup": "./test/tools/initializer.ts"
   },
   "husky": {
      "hooks": {
         "pre-commit": "npm run style",
         "pre-push": "npm run lint"
      }
   }
}
